function PermutationStep(num){
    var number = num.toString().split("")
    var greatestNumber = number[0]
        for(var i = 0; i < number.length;i++){
            if(number[i] > greatestNumber){
                greatestNumber = number[i]
            }
        }
    
    var location = number.indexOf(greatestNumber)
        number[location]= number[location-1]
        number[location-1] = greatestNumber
        var one = number.splice(0,location);
        
        var permNumber = one.concat(number.sort(function(a,b){return a-b})).join("") 
        
        if(permNumber > num){return permNumber} else{return -1}
}

